
.banner {
  width: 100%;
  height: 295rpx;
  border: 1rpx solid green;
}

.banner swiper {
  height: 100%;
  width: 100%;
}

.banner image {
  width: 100%;
  height: 295rpx;
}

.major {
  white-space: nowrap;
  padding: 30rpx 0;
}

.major .box {
  width: 170rpx;
  text-align: center;
  display: inline-block;
}

.major .pic {
  width: 100rpx;
  height: 100rpx;
}

.major .txt {
  margin-top: 8rpx;
  font-size: 26rpx;
}

.works{
  background: #f0f3f8;padding: 90rpx 0 70rpx 0;
}
.wkMain{display: flex;flex-wrap: wrap;justify-content: space-between;}
.wkMain .box{width: 344rpx;height: 214rpx;margin-bottom: 12rpx;position: relative;}
.wkMain .pic{width: 100%;height: 100%;}
.wkMain .ceng{width: 100%;height: 100%;background: rgba(0, 0, 0, 0.36);position: absolute;top: 0;left: 0;color: white;display: flex;flex-direction: column;justify-content: center;align-items: center;padding: 0 20rpx;box-sizing: border-box;}
.wkMain .ceng .tit{font-size: 34rpx;}
.wkMain .ceng .line{width: 50rpx;height: 2rpx;background-color: white;margin: 10rpx 0 20rpx;}
.wkMain .ceng .des{opacity: 0.6;text-transform: uppercase;font-size: 24rpx;letter-spacing: 5rpx;}

.dynamic{padding: 90rpx 0 70rpx;}
.dyItem{display: flex;padding: 15rpx 0;border: 1rpx dashed #f4f4f4;justify-content: space-between;}
.dyItem .pic{width: 230rpx;height: 150rpx;}
.dyItem .pic image{width: 100%;height: 100%;}
.dyItem .txt{width: 440rpx;display: flex;flex-direction: column;justify-content: space-between;}
.dyItem .title{font-size: 34rpx;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;}
.dyItem .info{font-size: 26rpx;color: #888;}
.dyItem .info text{font-size: 22rpx;}
